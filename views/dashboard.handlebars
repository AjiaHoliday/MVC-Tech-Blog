<div class="mb-5 pt-3">
    <a href="/dashboard/create/"><button id="create-blog" class="button is-primary is-pulled-right">create blog</button></a>
        
    <h2 class="title pb-4">dashboard: your blogs</h2><hr>
    {{#if blogs.length}}
</div>

    {{#each blogs as |blog|}}
        {{> blog-info blog}}
        
            <a href="/dashboard/edit/{{blog.id}}"><button class="button mb-5 ml-5 is-warning">edit blog</button></a>
        </div>
    {{/each}}

{{else}}
<h6 class="pb-4 has-text-centered is-italic">you do not currently have any blogs =(</h6>
</div>
{{/if}}